<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.endmc.server.mapper.bot.BotGroupCommandConfigMapper">

    <resultMap type="BotGroupCommandConfig" id="BotGroupCommandConfigResult">
        <result property="id" column="id"/>
        <result property="groupId" column="group_id"/>
        <result property="commandKey" column="command_key"/>
        <result property="commandName" column="command_name"/>
        <result property="commandCategory" column="command_category"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="disabledMessage" column="disabled_message"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectBotGroupCommandConfigVo">
        select id,
               group_id,
               command_key,
               command_name,
               command_category,
               is_enabled,
               disabled_message,
               create_time,
               update_time,
               create_by,
               update_by,
               remark
        from bot_group_command_config
    </sql>

    <select id="selectBotGroupCommandConfigList" parameterType="BotGroupCommandConfig"
            resultMap="BotGroupCommandConfigResult">
        <include refid="selectBotGroupCommandConfigVo"/>
        <where>
            <if test="groupId != null  and groupId != ''">
                and group_id = #{groupId}
            </if>
            <if test="commandKey != null  and commandKey != ''">
                and command_key = #{commandKey}
            </if>
            <if test="commandName != null  and commandName != ''">
                and command_name like concat('%', #{commandName}, '%')
            </if>
            <if test="commandCategory != null  and commandCategory != ''">
                and command_category = #{commandCategory}
            </if>
            <if test="isEnabled != null ">
                and is_enabled = #{isEnabled}
            </if>
            <if test="disabledMessage != null  and disabledMessage != ''">
                and disabled_message = #{disabledMessage}
            </if>
        </where>
    </select>

    <select id="selectBotGroupCommandConfigById" parameterType="Long"
            resultMap="BotGroupCommandConfigResult">
        <include refid="selectBotGroupCommandConfigVo"/>
        where id = #{id}
    </select>

    <insert id="insertBotGroupCommandConfig" parameterType="BotGroupCommandConfig" useGeneratedKeys="true"
            keyProperty="id">
        insert into bot_group_command_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupId != null and groupId != ''">group_id,
            </if>
            <if test="commandKey != null and commandKey != ''">command_key,
            </if>
            <if test="commandName != null">command_name,
            </if>
            <if test="commandCategory != null">command_category,
            </if>
            <if test="isEnabled != null">is_enabled,
            </if>
            <if test="disabledMessage != null">disabled_message,
            </if>
            <if test="createTime != null">create_time,
            </if>
            <if test="updateTime != null">update_time,
            </if>
            <if test="createBy != null">create_by,
            </if>
            <if test="updateBy != null">update_by,
            </if>
            <if test="remark != null">remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupId != null and groupId != ''">#{groupId},
            </if>
            <if test="commandKey != null and commandKey != ''">#{commandKey},
            </if>
            <if test="commandName != null">#{commandName},
            </if>
            <if test="commandCategory != null">#{commandCategory},
            </if>
            <if test="isEnabled != null">#{isEnabled},
            </if>
            <if test="disabledMessage != null">#{disabledMessage},
            </if>
            <if test="createTime != null">#{createTime},
            </if>
            <if test="updateTime != null">#{updateTime},
            </if>
            <if test="createBy != null">#{createBy},
            </if>
            <if test="updateBy != null">#{updateBy},
            </if>
            <if test="remark != null">#{remark},
            </if>
        </trim>
    </insert>

    <update id="updateBotGroupCommandConfig" parameterType="BotGroupCommandConfig">
        update bot_group_command_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupId != null and groupId != ''">group_id =
                #{groupId},
            </if>
            <if test="commandKey != null and commandKey != ''">command_key =
                #{commandKey},
            </if>
            <if test="commandName != null">command_name =
                #{commandName},
            </if>
            <if test="commandCategory != null">command_category =
                #{commandCategory},
            </if>
            <if test="isEnabled != null">is_enabled =
                #{isEnabled},
            </if>
            <if test="disabledMessage != null">disabled_message =
                #{disabledMessage},
            </if>
            <if test="createTime != null">create_time =
                #{createTime},
            </if>
            <if test="updateTime != null">update_time =
                #{updateTime},
            </if>
            <if test="createBy != null">create_by =
                #{createBy},
            </if>
            <if test="updateBy != null">update_by =
                #{updateBy},
            </if>
            <if test="remark != null">remark =
                #{remark},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBotGroupCommandConfigById" parameterType="Long">
        delete
        from bot_group_command_config
        where id = #{id}
    </delete>

    <delete id="deleteBotGroupCommandConfigByIds" parameterType="String">
        delete from bot_group_command_config where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectByGroupAndCommand" resultMap="BotGroupCommandConfigResult">
        <include refid="selectBotGroupCommandConfigVo"/>
        where group_id = #{groupId} and command_key = #{commandKey}
        limit 1
    </select>

    <select id="selectAllCommandKeys" resultType="String">
        select distinct command_key
        from bot_group_command_config
        where group_id = 'default'
    </select>
</mapper>